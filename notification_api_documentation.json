      "endpoint": "/markAsRead/{notification}",
      "method": "GET",
      "description": "Mark a specific notification as read",
      "request": {
        "headers": {
          "Authorization": "Bearer {token}",
          "Accept": "application/json"
        },
        "parameters": {
          "notification": {
            "type": "string",
            "required": true,
            "description": "Notification ID"
          }
        }
      },
      "response": {
        "success_status": 200,
